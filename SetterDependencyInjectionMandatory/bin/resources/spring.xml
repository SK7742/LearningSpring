<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
			"http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<!--  
	##For dependency-check None, it will not going to check for the values
	<bean id="c" class="beans.Car" dependency-check="none"></bean> -->
	<!--
	#For dependency-check simple, it will going to check for the values of primitive type, if it not mentioned in the bean then exception will be occured.
	 <bean id="c" class="beans.Car" dependency-check="simple">
		<property name="carName" value="Audi"></property>
	</bean> -->
	<!--  #For dependency-check object, it will going to check for the values of secondary type, if it not mentioned in the bean then exception will be occured.-->
	
	<!-- <bean id="e" class="beans.Engine" dependency-check="simple">
		<property name="modelYear" value="2021"></property>
	</bean>
	
	<bean id="c" class="beans.Car" dependency-check="objects"> 
		<property name="engine" ref="e"></property>
	</bean> -->
	
	<!-- 4. #For dependency-check all, it will going to check for the values of secondary type and primitive type, if it not mentioned in the bean then exception will be occured.  -->
	<bean id="e" class="beans.Engine" dependency-check="simple">
		<property name="modelYear" value="2021"></property>
	</bean>
	
	<bean id="c" class="beans.Car" dependency-check="all"> 
		<property name="carName" value="Tesla"></property>
		<property name="engine" ref="e"></property>
	</bean>
</beans>